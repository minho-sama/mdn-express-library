extends layout

block content 
  h1 #{title}: #{book.title}
  a(href=book.author.url) #{book.author.name} 

  if instances_of_book.length

    p #[strong Delete the following copies of the book before attempting to delete this book.] 

    div(style='margin-left:20px;margin-top:20px')

      h4 Copies

      dl
      each instance in instances_of_book
        dt
          a(href=instance.url) #{instance.book.title} 
          dd #{instance._id} 

  else
    p Do you really want to delete this Book?

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden',name='bookid', value=book._id, required='true' )

      button.btn.btn-primary(type='submit') Delete